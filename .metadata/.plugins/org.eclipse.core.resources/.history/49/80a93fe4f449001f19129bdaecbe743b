			for(int i = 0;i<hobbies.length;i++) {
				System.out.println(hobbies[i]);
//				PreparedStatement pst = conn.prepareStatement(sql);
//				pst.setString(1, hobbies[i]);
//				pst.setInt(2, id);
//				ResultSet rs = pst.executeQuery();
//				System.out.println(rs.getString("hobby"));
			}
		} catch (Exception e) {
